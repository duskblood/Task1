<Window x:Class="Task1.EditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="Редактировать товар" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Название товара:" />
            <TextBox x:Name="ProductNameTextBox" Margin="0,0,0,10" />

            <TextBlock Text="Количество:" />
            <TextBox x:Name="ProductQuantityTextBox" Margin="0,0,0,10" />

            <TextBlock Text="Цена:" />
            <TextBox x:Name="ProductPriceTextBox" Margin="0,0,0,10" />

            <TextBlock Text="Категория:" />
            <TextBox x:Name="ProductCategoryTextBox" Margin="0,0,0,10" />

            <Button Content="Сохранить" Click="SaveButton_Click" />
        </StackPanel>
    </Grid>
</Window>