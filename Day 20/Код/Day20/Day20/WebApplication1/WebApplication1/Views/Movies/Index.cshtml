@model IEnumerable<WebApplication1.Models.Movie>

@{
    ViewData["Title"] = "Каталог фильмов";
}

<h1>Каталог фильмов</h1>

<p>
    <a asp-action="Add" class="btn btn-primary">Добавить фильм</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Жанр</th>
            <th>Год</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Genre</td>
                <td>@movie.Year</td>
                <td>
                    <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-info">Подробнее</a>
                </td>
            </tr>
        }
    </tbody>
</table> 